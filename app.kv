BoxLayout:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, 1

        Label:
            text: 'Sort By'
        Spinner:
            id: input_sort
            text:'Priority'
            values: 'Priority', 'Name', 'Country'
            halign: 'center'
            on_text: app.sort()

        Label:
            text: 'Add new place'

        Label:
            text: 'Name:'
        TextInput:
            id: input_name
            halign: 'center'

        Label:
            text: 'Country:'
        TextInput:
            id: input_country
            halign: 'center'


        Label:
            text: 'Priority:'
        TextInput:
            id: input_priority
            halign: 'center'

        Button:
            text: 'Add Place'
            on_press: app.add_place()
        Button:
            text: 'Clear'
            on_press: app.clear()


    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: 0.1
            id: show_unvisited_num
            text:''

        BoxLayout:
            orientation: 'vertical'
            id: places_list

        Label:
            size_hint_y: 0.1
            id: show_text
            text:''

